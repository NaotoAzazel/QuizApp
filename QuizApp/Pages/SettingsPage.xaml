<Page
    x:Class="QuizApp.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuizApp.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="0,0,0,30"
            FontSize="28"
            FontWeight="Bold"
            Foreground="#333"
            Text="Profile settings" />

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <Label
                Margin="0,0,0,2"
                FontSize="14"
                Foreground="Gray">
                New password
            </Label>
            <PasswordBox
                x:Name="NewPasswordBox"
                Width="200"
                Height="30"
                Margin="0,0,0,8"
                VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <Label FontSize="14" Foreground="Gray">
                Confirm new password
            </Label>
            <PasswordBox
                x:Name="ConfirmPasswordBox"
                Width="200"
                Height="30"
                Margin="0,0,0,8"
                VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <Label
                Margin="0,0,0,2"
                FontSize="14"
                Foreground="Gray">
                Birthday
            </Label>
            <DatePicker
                x:Name="BirthDatePicker"
                Width="250"
                FontSize="16" />
        </StackPanel>

        <Button
            Grid.Row="4"
            Width="250"
            Height="40"
            Margin="0,82,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="SaveChangesClick"
            Content="Save changes"
            FontSize="14" />
    </Grid>
</Page>
