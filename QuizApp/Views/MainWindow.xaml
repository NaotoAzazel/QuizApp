<Window x:Class="QuizApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FF2D2D30">
            <Button x:Name="StartNewQuiqButton" Content="Start new quiz" Margin="5" Click="StartNewQuizButton_Click"/>
            <Button x:Name="HistoryButton" Content="History" Margin="5" Click="HistoryButton_Click"/>
            <Button x:Name="Top20Button" Content="Top 20" Margin="5" Click="Top20Button_Click"/>
            <Button x:Name="SettingsButton" Content="Settings" Margin="5" Click="SettingsButton_Click"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
