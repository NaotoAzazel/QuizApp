<Window
    x:Class="QuizApp.Views.AdminPanelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AdminPanelWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="10">
        <TabControl x:Name="AdminTabs" SelectionChanged="AdminTabs_SelectionChanged">
            <TabItem Header="Categories">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            FontWeight="Bold"
                            Text="Manage categories" />

                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                            <StackPanel>
                                <TextBox
                                    x:Name="categoryNameTextBox"
                                    Width="200"
                                    Margin="0,0,10,0" />
                                <TextBlock
                                    x:Name="errorCategoryName"
                                    Margin="2,0,0,8"
                                    FontSize="12"
                                    Visibility="Collapsed" />
                            </StackPanel>
                            <Button Click="AddCategory_Click" Content="Add" />
                        </StackPanel>

                        <DataGrid
                            x:Name="CategoriesDataGrid"
                            Height="400"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            ItemsSource="{Binding}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding Id}"
                                    Header="ID" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Name}"
                                    Header="Name" />
                                <DataGridTemplateColumn Width="100" Header="Action">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Click="DeleteCategory_Click"
                                                Content="Delete"
                                                Tag="{Binding Id}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem
                Width="70"
                Margin="0,-2,-2,0"
                HorizontalAlignment="Right"
                Header="Questions">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock
                            FontSize="20"
                            FontWeight="Bold"
                            Text="Manage questions" />

                        <Button
                            Width="150"
                            Margin="0,10,0,10"
                            HorizontalAlignment="Left"
                            Click="AddQuestion_Click"
                            Content="Add question" />

                        <DataGrid
                            x:Name="QuestionsDataGrid"
                            Height="300"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding Id}"
                                    Header="ID" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Text}"
                                    Header="Question" />
                                <DataGridTemplateColumn Width="120" Header="Actions">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Button
                                                    Margin="0,0,5,0"
                                                    Click="EditQuestion_Click"
                                                    Content="Edit"
                                                    Tag="{Binding Id}" />
                                                <Button
                                                    Click="DeleteQuestion_Click"
                                                    Content="Delete"
                                                    Tag="{Binding Id}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
