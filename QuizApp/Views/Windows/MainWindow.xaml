<Window
    x:Class="QuizApp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuizApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FF2D2D30">
            <Button
                x:Name="StartNewQuiqButton"
                Margin="5"
                Click="StartNewQuizButton_Click"
                Content="Start new quiz" />
            <Button
                x:Name="HistoryButton"
                Margin="5"
                Click="HistoryButton_Click"
                Content="History" />
            <Button
                x:Name="Top20Button"
                Margin="5"
                Click="Top20Button_Click"
                Content="Top 20" />
            <Button
                x:Name="SettingsButton"
                Margin="5"
                Click="SettingsButton_Click"
                Content="Settings" />
        </StackPanel>

        <Frame
            x:Name="MainFrame"
            Grid.Column="1"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
