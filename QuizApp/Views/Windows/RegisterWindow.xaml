<Window
    x:Class="QuizApp.Views.RegisterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuizApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RegisterWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                FontWeight="bold"
                Text="Create Your Account" />
            <StackPanel>
                <Label Margin="0,0,0,2" Foreground="Gray">
                    Username
                </Label>
                <TextBox
                    x:Name="textBoxUsername"
                    Height="30"
                    Margin="0,0,0,8" />
                <TextBlock
                    x:Name="errorUsername"
                    Margin="2,0,0,8"
                    FontSize="12"
                    Visibility="Collapsed" />
            </StackPanel>
            <StackPanel>
                <Label Margin="0,0,0,2" Foreground="Gray">
                    Password
                </Label>
                <PasswordBox
                    x:Name="textBoxPassword"
                    Height="30"
                    Margin="0,0,0,8"
                    VerticalAlignment="Center" />
                <TextBlock
                    x:Name="errorPassword"
                    Margin="2,0,0,8"
                    FontSize="12"
                    Visibility="Collapsed" />
            </StackPanel>
            <StackPanel>
                <Label Margin="0,0,0,2" Foreground="Gray">
                    Birthday
                </Label>
                <DatePicker
                    x:Name="birthdayPicker"
                    Height="30"
                    Margin="0,0,0,8"
                    VerticalAlignment="Center" />
            </StackPanel>
            <Button
                Height="30"
                Click="RegisterButtonClick"
                Content="Sign up" />
            <TextBlock
                Margin="10"
                Cursor="Hand"
                Foreground="#1447e6"
                MouseLeftButtonDown="LoginWindowOpen"
                Text="Already have an account? Sign in"
                TextAlignment="Center"
                TextDecorations="Underline" />
        </StackPanel>
    </Grid>
</Window>
