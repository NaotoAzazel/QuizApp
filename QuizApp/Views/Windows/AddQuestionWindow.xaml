<Window
    x:Class="QuizApp.Views.AddQuestionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:QuizApp.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuizApp.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddQuestionWindow"
    Width="800"
    Height="500"
    mc:Ignorable="d">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Foreground="Gray" Text="Question text:" />
            <TextBox x:Name="questionTextBox" Margin="0,5,0,10" />
            <TextBlock
                x:Name="errorQuestionText"
                Margin="2,0,0,8"
                FontSize="12"
                Visibility="Collapsed" />

            <components:CategorySelector
                x:Name="categorySelector"
                Margin="0,0,0,10"
                IncludeMixedCategory="False" />

            <TextBlock Foreground="Gray" Text="Answers:" />
            <ListBox x:Name="answersListBox" Height="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsCorrect}" />
                            <TextBox
                                Width="350"
                                Margin="5,0,0,0"
                                Text="{Binding Text}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Margin="0,10,0,10" Orientation="Horizontal">
                <Button
                    Margin="0,0,10,0"
                    Click="AddAnswer_Click"
                    Content="Add answer" />
                <Button Click="RemoveAnswer_Click" Content="Remove selected" />
            </StackPanel>

            <Button
                Width="100"
                HorizontalAlignment="Right"
                Click="Save_Click"
                Content="Save" />
        </StackPanel>
    </Grid>
</Window>
