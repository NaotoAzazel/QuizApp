<Window x:Class="QuizApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp.Views"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Text="Create Your Account"
                Margin="0 0 0 20"
                FontSize="30"
                FontWeight="bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
            />
            <StackPanel>
                <Label
                    Margin="0 0 0 2"
                    Foreground="Gray">
                    Username
                </Label>
                <TextBox
                    x:Name="textBoxUsername"
                    Height="30"
                    Margin="0 0 0 8" />
            </StackPanel>
            <StackPanel>
                <Label
                    Margin="0 0 0 2"
                    Foreground="Gray">
                    Password
                </Label>
                <PasswordBox
                    x:Name="textBoxPassword"
                    Height="30"
                    VerticalAlignment="Center"
                    Margin="0 0 0 8" /> 
            </StackPanel>
            <StackPanel>
                <Label
                    Margin="0 0 0 2"
                    Foreground="Gray">      
                    Birthday
                </Label>
                <DatePicker
                    x:Name="birthdayPicker"
                    Height="30"
                    VerticalAlignment="Center"
                    Margin="0 0 0 8" />         
            </StackPanel>
            <Button 
                Height="30" 
                Content="Sign up" 
                Click="RegisterButtonClick"
            />
            <TextBlock 
                Text="Already have an account? Sign in" 
                TextAlignment="Center" 
                Foreground="#1447e6"
                TextDecorations="Underline"
                Cursor="Hand"
                Margin="10"
                MouseLeftButtonDown="LoginWindowOpen"
            />
        </StackPanel>
    </Grid>
</Window>
